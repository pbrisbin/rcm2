# vim ft=sh
[ "$(sigil 'foo')" = '@' ] || fail "@ is default"

copy_always='foo bar'
[ "$(sigil 'foo')" = 'X' ] || fail "X for foo in copy_always"
[ "$(sigil 'bar')" = 'X' ] || fail "X for bar in copy_always"
[ "$(sigil 'baz')" = '@' ] || fail "@ for baz not in copy_always"

copy_all=1
[ "$(sigil 'foo')" = 'X' ] || fail "when copy_all is 1"
