#!/bin/sh
. "$(dirname "$0")"/../share/rcm/rcm.sh

usage() {
  printf "Usage: rcdn [-Vqvh] [-I EXCL_PAT] [-x EXCL_PAT] [-t TAG] [-d DOT_DIR]\n"
  printf "see rcdn(1) and rcm(5) for more details\n"
}

process_dotfile() {
  local dotfile="$1"
  local destination="$(destination "$dotfile")"
  local potential="$destination"

  while [ "$potential" != '/' ]; do
    if [ -L "$potential" ]; then
      _rm "$potential"
      debug "removed $potential (symlink)"
      return 0
    fi

    potential="$(dirname "$potential")"
  done

  if copy "$dotfile"; then
    _rm "$destination"
    debug "removed $potential (copy)"
  fi
}

parse_options "$@" && process_dotfiles 'down'
