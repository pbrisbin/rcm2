#!/bin/sh

: ${RCM_LIB:="$(dirname "$0")"/../share/rcm}
. $RCM_LIB/rcm.sh

process_dotfile() {
  local dotfile="$1" sigil

  if [ "$show_flags" -eq 1 ]; then
    if copy "$dotfile"; then
      sigil=":X"
    else
      sigil=":@"
    fi
  fi

  printf "%s:%s/%s%s\n" \
    "$(destination "$dotfile")" "$PWD" "$dotfile" "$sigil"
}

if parse_options "$@"; then
  hooks=0
  process_dotfiles
fi
