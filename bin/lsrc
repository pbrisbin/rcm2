#!/bin/sh

: ${RCM_LIB:="$(dirname "$0")"/../share/rcm}
. $RCM_LIB/rcm.sh

process_dotfile() {
  local dotfile="$1"

  printf "%s:%s/%s" "$(destination "$dotfile")" "$PWD" "$dotfile"

  if [ "$show_flags" -eq 1 ]; then
    printf "%s" "$(sigil "$dotfile")"
  fi

  printf "\n"
}

parse_options "$@" && process_dotfiles
